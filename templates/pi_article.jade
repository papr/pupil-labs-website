extends layout

block append head
  meta(name="twitter:site" content="@pupil_labs")
  meta(name="twitter:creator" content="@pupil_labs")
  meta(property="og:url" content="https://pupil-labs.com" + page.url)
  meta(property="og:title" content=page.title)
  meta(property="og:description" content=page.metadata.subtitle)

  - var img_path_base = "https://pupil-labs.com/"
  - if (page.metadata.featured_img){
  -   var img_path_full = img_path_base + page.metadata.featured_img.replace("../../../../", "")
  - }
  
  meta(property="og:image" content=img_path_full)
  meta(name="twitter:card" content="summary_large_image")

block append title
  | #{ " - " + page.title}

block main
  div(id="pi-article")
    div.Site-content-container
      div.Feature-container-column
        article.Grid
          header.Grid-cell.Grid-cell--full.u-textCenter(style="padding-top:1em;")
            h2.Blog-article-title= page.title
            if page.metadata.topic
              h4.small= page.metadata.topic + ' - ' + moment.utc(page.date).format('YYYY MMM DD')
            //- h4.small= moment.utc(page.date).format('YYYY MMM DD')

    div.Site-content-container(style="background-color:#ECEFF1;")
      div.Feature-container-column
        article.Grid
          section.Grid-cell.Grid-cell--full.content!= typogr(page.html).typogrify()

     div.Site-content-container
      div.Blog-nav.Grid.Grid--justifyCenter
        a(href="/blog")
          h4.Blog-nav-link Back to blog


